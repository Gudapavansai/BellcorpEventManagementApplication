{
    "version": 2,
    "name": "bellcrop-event-application",
    "framework": "vite",
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://bellcorpeventmanagementapplication.onrender.com/api/:path*"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/client/dist/assets/$1"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/client/dist/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ]
}